{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information",
            "Microsoft.EntityFrameworkCore": "Warning",
            "Microsoft.AspNetCore.HttpLogging": "Information",
            "FinancialWebApplication.Controllers": "Debug",
            "FinancialWebApplication.Services": "Information",
            "FinancialWebApplication.Data": "Warning"
        },
        "Console": {
            "LogLevel": {
                "Default": "Information",
                "Microsoft": "Warning",
                "FinancialWebApplication.Controllers": "Debug"
            },
            "FormatterOptions": {
                "IncludeScopes": true,
                "TimestampFormat": "HH:mm:ss "
            }
        },
        "Debug": {
            "LogLevel": {
                "Default": "Information"
            }
        },
        "EventSource": {
            "LogLevel": {
                "Default": "Warning"
            }
        }
    },

    "AllowedHosts": "*"
}